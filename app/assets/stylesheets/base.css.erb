@import url(http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic);


/* Base Style*/

html, body {
	font-family: 'Lato', sans-serif;
	height:100%;
	font-weight:400;
	color: #546E7A;
	background-color:#f9f9f9;
}


/*------------------ float ---------------------*/

.fl-l {
	float:left;
}

.fl-r {
	float:right;
}

.cl-b {
	clear:both;
}

.cl-f {
	clear:fixed;
}

.center {
	text-align:center;
}

.space-25 {
	width:100%;
	height:25px;
}

.space-50 {
	width:100%;
	height:50px;
}

/*------------------ Basic Font setting ---------------------*/

.h1 {
	font-weight:700;
	font-size:32px;
}

.h2 {
	font-weight:400;
	font-size:24px;
}

.h4 {
	font-weight:400;
	font-size:16px;
	color:#9E9E9E;
}

.label {
	color: #757575;
	font-size:14px;
	font-weight:700;
}


.debug {
	border: 1px solid red;
}



/*------------------header---------------------*/

.header {
	width: 100%;
	height: 70px;
	border-bottom: 1px solid #EEEEEE;
	background-color: white;
}

.header .inner {
	width: 90%;
	margin: 0 5% auto;
}


.logo {
	line-height: 60px;
}

.nav {
	height:60px;
	line-height: 60px;
}

.nav ul li {
	display:inline;
	margin-left:30px;
	vertical-align: middle;
}



/*------------------ Main ---------------------*/


.main {
	width: 90%;
	height:100%;
	margin: 5% auto;
	padding-bottom:100px;
}

